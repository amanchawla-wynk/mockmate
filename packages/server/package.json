{
  "name": "@mockmate/server",
  "version": "0.1.0",
  "private": true,
  "description": "MockMate server - Express backend with mock API server",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "prebuild": "cd ../dashboard && npm run build && mkdir -p ../server/dist/public && cp -r dist/* ../server/dist/public/",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "node-forge": "^1.3.3",
    "open": "^11.0.0",
    "qrcode": "^1.5.4",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.20",
    "@types/node-forge": "^1.3.14",
    "@types/qrcode": "^1.5.6",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.8",
    "supertest": "^7.1.4",
    "tsx": "^4.7.0",
    "vitest": "^1.0.0"
  }
}

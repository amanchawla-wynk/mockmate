{
  "name": "mockmate",
  "version": "0.1.0",
  "private": true,
  "description": "Local mock API server for mobile developers",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:server": "npm run dev --workspace=packages/server",
    "dev:dashboard": "npm run dev --workspace=packages/dashboard",
    "build:server": "npm run build --workspace=packages/server",
    "build:dashboard": "npm run build --workspace=packages/dashboard",
    "build": "npm run build:dashboard && npm run build:server",
    "start": "npm run build && npm run start --workspace=packages/server",
    "postinstall": "npm run build",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces"
  },
  "keywords": [
    "mock",
    "api",
    "testing",
    "mobile",
    "ios",
    "android"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
